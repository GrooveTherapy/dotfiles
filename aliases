# echo '.aliases loaded'

# Naviation Helpers
alias ~='cd ~'
alias .='cd ..'
alias ..='cd ../..'
alias ...='cd ../../..'
alias ....='cd ../../../..'

# Git Helpers
alias st='git status'
alias gd='git diff'
alias git-reset='git reset --hard && git clean -f'

# Directory Listing Helpers
alias la='ls -al'
alias lah='ls -alh'

# disk space
alias diskusage='du -h -d 1 .'

alias ssh-key-make='ssh-keygen -t rsa -b 2048 -C'

alias pip=pip3
alias python=python3.7

source ~/dotfiles/cmds/env-cd
